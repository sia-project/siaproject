<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>LVS</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Authentication</servlet-name>
		<servlet-class>control.Authentication</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Authentication</servlet-name>
		<url-pattern>/authentication</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ManageAccount</servlet-name>
		<servlet-class>control.ManageAccount</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ManageAccount</servlet-name>
		<url-pattern>/manageAccount</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ManageProduct</servlet-name>
		<servlet-class>control.GestionProduit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ManageProduct</servlet-name>
		<url-pattern>/manageProduct</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>